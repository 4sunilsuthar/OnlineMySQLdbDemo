<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back_image_2"
    android:orientation="vertical"
    tools:context="com.demo.admin.onlinemysqldbdemo.MainActivity">


    <ImageView
        android:id="@+id/img_user_profile"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/contact_app_logo_img" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="User Name Here"
        android:textColor="#dd4422"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:text="User Email Here"
        android:textColor="#dd4422"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2.5">
    <Button
        android:id="@+id/btn_add_contact"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:background="@drawable/button_back_img"
        android:onClick="moveFunction"
        android:text="Add Contact"
        android:textColor="#fd404040" />

    <Button
        android:id="@+id/btn_view_contact"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:background="@drawable/button_back_img"
        android:onClick="moveToViewFunction"
        android:text="View Contacts"
        android:textColor="#fd404040" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_view_image_list"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_back_img"
            android:onClick="moveToUserImgFunction"
            android:text="View User Images"
            android:textColor="#fd404040" />

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_back_img"
            android:onClick="logOutFunction"
            android:text="Log Out"
            android:textColor="#ffaa4040" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:gravity="center"
        android:text="Checking Internet Connection"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
